<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.sdd_project"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.sdd_project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.PortofolioActivity"
            android:exported="true"
            android:theme="@style/Theme.sdd_project.NoActionBar"/>
        <activity
            android:name=".ui.view.DonutActivity"
            android:exported="true"
            android:theme="@style/Theme.sdd_project.NoActionBar"/>
        <activity
            android:name=".ui.view.BarcodeActivity"
            android:exported="true"
            android:theme="@style/Theme.sdd_project.NoActionBar"/>
        <activity
            android:name=".ui.view.PromoActivity"
            android:exported="true"
            android:theme="@style/Theme.sdd_project.NoActionBar"/>
    </application>

</manifest>